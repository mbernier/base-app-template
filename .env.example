# =============================================================================
# BASE APP TEMPLATE - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# BLOCKCHAIN
# -----------------------------------------------------------------------------

# Your app's primary token (ERC-20 on Base)
NEXT_PUBLIC_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_TOKEN_SYMBOL=TOKEN
NEXT_PUBLIC_TOKEN_DECIMALS=18

# Chain: 84532 (Base Sepolia) or 8453 (Base Mainnet)
NEXT_PUBLIC_CHAIN_ID=84532

# Treasury/escrow wallet (if needed)
NEXT_PUBLIC_TREASURY_WALLET=0x...

# -----------------------------------------------------------------------------
# COINBASE / ONCHAINKIT (Optional)
# -----------------------------------------------------------------------------

# Optional: CDP API Key from Coinbase Developer Platform
# Only needed for gasless transactions and premium OnchainKit features
# Get from: https://portal.cdp.coinbase.com
# The app works fine without this - users just pay their own gas fees
NEXT_PUBLIC_CDP_API_KEY=

# Optional: Paymaster URL for gasless/sponsored transactions
NEXT_PUBLIC_PAYMASTER_URL=

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------

# Public URL of the app
NEXT_PUBLIC_APP_URL=http://localhost:3100

# App name (displayed in wallet)
NEXT_PUBLIC_APP_NAME="My Base App"

# Environment
NODE_ENV=development

# -----------------------------------------------------------------------------
# DATABASE (Supabase)
# -----------------------------------------------------------------------------

NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54340
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=

# Session duration in seconds (default: 24 hours)
SESSION_DURATION=86400

# SIWE configuration
SIWE_DOMAIN=localhost
SIWE_STATEMENT="Sign in to My Base App"

# Salt for IP address hashing in audit logs (generate with: openssl rand -hex 16)
IP_HASH_SALT=

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------

# Show user audit log on profile page (useful for debugging/transparency)
NEXT_PUBLIC_SHOW_USER_AUDIT_LOG=false

# -----------------------------------------------------------------------------
# NFT CONFIGURATION
# -----------------------------------------------------------------------------

# Default NFT provider: 'onchainkit' | 'zora_protocol' | 'zora_coins'
NEXT_PUBLIC_DEFAULT_NFT_PROVIDER=onchainkit

# Zora referral addresses (earn protocol rewards)
ZORA_CREATE_REFERRAL_ADDRESS=
ZORA_MINT_REFERRAL_ADDRESS=
ZORA_PLATFORM_REFERRER_ADDRESS=

# -----------------------------------------------------------------------------
# FARCASTER MINI-APP
# -----------------------------------------------------------------------------

# Enable Farcaster mini-app mode (adds manifest, embed meta, etc.)
NEXT_PUBLIC_FARCASTER_ENABLED=false

# Account association (generate with Farcaster dev tools or `npx @farcaster/auth`)
# These values prove domain ownership for the manifest
FARCASTER_ACCOUNT_HEADER=
FARCASTER_ACCOUNT_PAYLOAD=
FARCASTER_ACCOUNT_SIGNATURE=

# Mini-app metadata (used in manifest + embed meta tag)
NEXT_PUBLIC_FARCASTER_ICON_URL=
NEXT_PUBLIC_FARCASTER_IMAGE_URL=
NEXT_PUBLIC_FARCASTER_SPLASH_IMAGE_URL=
NEXT_PUBLIC_FARCASTER_SPLASH_BG_COLOR=#ffffff
NEXT_PUBLIC_FARCASTER_BUTTON_TITLE=Launch

# -----------------------------------------------------------------------------
# ADMIN
# -----------------------------------------------------------------------------

# Wallet address that gets superadmin role on first login
INITIAL_SUPER_ADMIN_ADDRESS=
